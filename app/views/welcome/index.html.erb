    -moz-transition: all 0.5s ease-in-out 0s;
    transition: all 0.5s ease-in-out 0s;
  }

  .metro.grid > a:hover .glyphicon {
    font-size: 120px;
    top: 20px;
    margin-bottom: 50px;
  }

  .metro.grid .placeholder {
    border: 1px solid green;
  }
</style>

