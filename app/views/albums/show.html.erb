<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @album.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @album.description %>
</p>

<h2>Photos</h2>
<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @album.photos.each do |photo| %>
      <tr>
        <td><%= photo.name %></td>
        <td><%= photo.description %></td>
        <td><%= link_to 'Show', photo_url(photo) %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to "Destroy", photo_url(photo),
                        :method => :delete, :confirm => "Really?" %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<h2>Add a Photo</h2>
<%= form_for [@album, @album.photos.build], :html => {:multipart => true, :class => 'form-horizontal'} do |f| %>
    <div class="field form-group">
      <%= f.label :name, class: 'col-md-2' %>
      <%= f.text_field :name, class: 'col-md-4' %>
    </div>

    <div class="field form-group">
      <%= f.label :description, class: 'col-md-2' %>
      <%= f.text_area :description, class: 'col-md-4' %>
    </div>

    <div class="field form-group">
      <%= f.label :photo, class: 'col-md-2' %>
      <%= f.file_field :photo, class: 'col-md-4' %>
    </div>
    <div>
      <%= f.submit class: 'btn btn-default col-md-2 col-md-offset-2' %>
    </div>
<% end %>


<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', collection_path(@album.collection) %>
