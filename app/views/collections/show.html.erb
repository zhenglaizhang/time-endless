<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @collection.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @collection.description %>
</p>

<h2>Albums</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collection.albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.description %></td>
        <td><%= link_to 'Show', collection_album_url(@collection, album) %></td>
        <td><%= link_to 'Edit', edit_collection_album_path(@collection, album) %></td>
        <td><%= link_to "Destroy", collection_album_path(@collection, album),
      :method => :delete, :confirm => "Really?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Add a Album</h2>
<%= form_for([@collection, @collection.albums.build]) do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Edit', edit_collection_path(@collection) %> |
<%= link_to 'Back', collections_path %>
